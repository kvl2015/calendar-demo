{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_booking_index' %}

{% block main %}
    <h1>{{ 'title.user_list'|trans }}</h1>
    <br/><br/>
    <div class="section actions">
        <a href="{{ path('admin_user_new') }}" class="btn btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_user'|trans }}
        </a>
    </div><br/><br/>
    <table  class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th>Id</th>
            <th><i class="fa fa-calendar" aria-hidden="true"></i>{{ 'label.username'|trans }}</th>
            <th><i class="fa fa-calendar" aria-hidden="true"></i>{{ 'label.email'|trans }}</th>
            <th>{{ 'label.role'|trans }}</th>
            <th class="text-right"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email}}</td>
                <td>{{ user.jsonRoles }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_user_show', {id: user.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>

                        <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

