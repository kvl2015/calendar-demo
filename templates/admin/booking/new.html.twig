{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_booking_new' %}

{% block main %}
    <h1>{{ 'title.booking_new'|trans }}</h1>

    {{ form_errors(form) }}

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.beginAt) }}
    {{ form_row(form.startTime) }}
    {{ form_row(form.endTime) }}
    {{ form_row(form.color) }}
    {{ form_row(form.description) }}



    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_post'|trans }}
    </button>
    {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
    <a href="{{ path('admin_booking_index') }}" class="btn btn-link">
        <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
    </a>
    {{ form_end(form) }}

{% endblock %}

