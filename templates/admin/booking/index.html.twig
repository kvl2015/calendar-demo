{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_booking_index' %}

{% block main %}
    <h1>{{ 'title.booking_list'|trans }}</h1>
    <br/><br/>
    <div class="section actions">
        <a href="{{ path('admin_booking_new') }}" class="btn btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_booking'|trans }}
        </a>
    </div><br/><br/>
    <table  class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th>Id</th>
            <th><i class="fa fa-calendar" aria-hidden="true"></i>{{ 'label.begin_at'|trans }}</th>
            <th><i class="fa fa-calendar" aria-hidden="true"></i>{{ 'label.time'|trans }}</th>
            <th>{{ 'label.title'|trans }}</th>
            <th class="text-right"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.beginAt ? booking.beginAt|date('d.m.Y') : '' }}</td>
                <td>{{ booking.startTime ? booking.startTime|date('H:i:s') : '' }} / {{ booking.endTime ? booking.endTime|date('H:i:s') : '23:59:59' }}</td>
                <td>{{ booking.title }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_booking_show', {id: booking.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>

                        <a href="{{ path('admin_booking_edit', {id: booking.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

