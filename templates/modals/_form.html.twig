{{ form_start(form) }}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">{{ 'modal.edit_event'|trans }}</h4>
</div>
<div class="modal-body">
    {{ form_widget(form) }}
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'action.close'|trans }}</button>
    <button type="button" class="btn btn-danger" id="removeEvent" data-dismiss="modal">{{ 'action.delete'|trans }}</button>
    <button type="button" id="eventEdit" class="btn btn-primary">{{ 'action.save'|trans }}</button>
</div>
{{ form_end(form) }}